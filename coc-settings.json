{
    "languageserver": {
        "haskell": {
            "command": "ghcide-lsp-via-stack-exec",
            "args": [ "" ],
            "rootPatterns": [
                "*.cabal",
                "cabal.config",
                "cabal.project",
                "package.yaml",
                ".stack.yaml",
                ".hie-bios",
                "BUILD.bazel"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "disableCompletion": true
        }
    },
    "coc.preferences.hoverTarget": "preview"
}
